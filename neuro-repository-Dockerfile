FROM python:3.11-slim

WORKDIR /app

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Копирование requirements.txt и установка зависимостей
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Копирование исходного кода
COPY neuro_repository_server.py .
COPY api/ ./api/

# Создание директории для NeuroRepository
RUN mkdir -p /app/NeuroRepository

# Создание пользователя для безопасности
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Переменные окружения
ENV FLASK_APP=neuro_repository_server.py
ENV FLASK_ENV=production
ENV PORT=8090
ENV NEURO_REPO_PATH=/app/NeuroRepository

# Экспорт порта
EXPOSE 8090

# Команда запуска
CMD ["python", "neuro_repository_server.py"]
